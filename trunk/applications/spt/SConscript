import os.path

Import('env buildDir')

# construct buildDir and set include path
applicationDir = 'applications/spt/'
buildDir = os.path.join('#/', buildDir, applicationDir)
env.Append(CPPPATH = [os.path.join(applicationDir, 'include')])

# build
objects = SConscript('src/SConscript', build_dir=buildDir)

# link application
program = env.Program(
    os.path.join(buildDir, 'spt'), 
    objects, 
    LIBS=['osg', 'osgViewer'])

# install it
env.Install('#/bin', program)
env.Alias('install', '#/bin')