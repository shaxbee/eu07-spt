import os.path

Import('env buildDir')

env = env.Clone(toolpath=['#/build/cxxtest'], tools=['default', 'cxxtest'])
env.Append(CXXFLAGS='-g')
env.Append(CXXTEST='#/build/cxxtest')
env.Append(CPPPATH=['#/build/cxxtest'])

for library in ['sptCore']:
    SConscript(
        os.path.join(library, 'SConscript'),
        exports = ['env'],
        build_dir = os.path.join('#', buildDir, 'tests'))
