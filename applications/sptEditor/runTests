#!/bin/bash

# If you have nosetests installed, please specify the path to it
# default path:
#NOSETESTS_PATH=/usr/bin/nosetests
NOSETESTS_PATH=/usr/local/bin/nosetests

if [[ -x $NOSETESTS_PATH ]]; then
  $NOSETESTS_PATH -v --with-doctest --doctest-extension=txt test/*.py src/sptmath.py src/sptmath.txt
else
  PYTHONPATH=".:"`pwd`"/src/"
  export PYTHONPATH

  pushd "test"

  python t_groups.py
  python t_switches.py
  python t_tracks.py
  python t_scenery.py

  popd

  python -m doctest -v sptmath.py
  python -m doctest -v sptmath.txt
fi

