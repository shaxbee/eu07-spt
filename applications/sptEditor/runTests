#!/bin/bash

# If you have nosetests installed, please specify the path to it
# default path:
#NOSETESTS_PATH=/usr/bin/nosetests
NOSETESTS_PATH=/usr/local/bin/nosetests-2.6

if [[ -x $NOSETESTS_PATH ]]; then
  $NOSETESTS_PATH -v --with-doctest test/t_groups.py test/t_switches.py test/t_tracks.py test/t_scenery.py src/sptmath.py
else
  PYTHONPATH=".:"`pwd`"/src/"
  export PYTHONPATH

  pushd "test"

  python t_groups.py
  python t_switches.py
  python t_tracks.py
  python t_scenery.py

  popd
fi

